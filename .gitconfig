[github]
	user = gurdiga
	token = 8e6491be25675756987603e28e8f886f
[user]
	name = Vlad GURDIGA
	email = gurdiga@gmail.com
[color]
	ui = true
[core]
	pager = less -XFRS
	editor = vim
	excludesfile = ~/.gitignore
	quotepath = false
[alias]
	is-clean = diff --exit-code --quiet
	undo = reset HEAD~1
	prune = remote prune origin
[branch]
	autosetuprebase = always
[push]
	default=current
[pull]
	rebase=true
	default=current
[diff]
	compactionHeuristic=true
[checkout]
	defaultRemote=origin
[grep]
	extendedRegexp = true
[init]
	defaultBranch = main
