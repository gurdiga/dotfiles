alias gs='git status'
alias gsu='git status -uno'
alias gsh='git show'
alias gd='git diff'
alias gds='git diff --staged'
alias ga='git add'
alias grh='git reset --hard'
alias gc='git commit'
alias gch='git checkout'
alias gcp='git cherry-pick'
alias gl='git log --abbrev-commit'
alias gln='git log --abbrev-commit --name-only'
alias glg='git log --graph --pretty=oneline --abbrev-commit'
alias push='git push'
alias pull='git pull'
alias l='ls -hlaF --color'
alias f='grep --color=always -n -I -R --exclude-dir=log --exclude-dir=tmp --exclude-dir=.git --exclude-dir=.svn --exclude-dir=session'
alias fi='find . -name'
alias vim='~/vimp'
alias less='less -R'
alias j='jobs -l'
alias top='top -d1'

# Breakout stuff
alias refreshdb='rake db:drop db:create db:migrate db:test:clone_structure'
alias br='cd ~/src/breakout'
alias s='rails server -d'
alias ss='killall -INT ruby1.8'
alias c='rails console'

function gp() { git push review HEAD:refs/for/$1; }
function gb() { git branch $1 && git checkout $1; }

